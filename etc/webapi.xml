<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/portmone/success" method="POST">
        <service class="CodeCustom\Portmone\Api\Response\SuccessInterface" method="success"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/portmone/success" method="GET">
        <service class="CodeCustom\Portmone\Api\Response\SuccessInterface" method="success"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/portmone/failure" method="POST">
        <service class="CodeCustom\Portmone\Api\Response\FailureInterface" method="failure"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/portmone/failure" method="GET">
        <service class="CodeCustom\Portmone\Api\Response\FailureInterface" method="failure"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>
